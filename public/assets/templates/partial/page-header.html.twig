<!-- page-header -->
<header data-template="{{ page.tier }}">

    <!-- top-navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container d-flex flex-row-reverse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-decoration-none text-black-50 small" href="https://github.com/sponsors/hxtree">
                        <i class="fas fa-dollar-sign"></i> Give
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-decoration-none text-black-50 small" href="https://github.com/Ouxsoft">
                        <i class="fab fa-github fa"></i> Collaborate
                    </a>
                </li>
                {% if user.username %}
                <li class="nav-item dropdown">
                    <a class="nav-link text-black-50 dropdown-toggle small" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/user/profile"><small>Signed in as {{ user.username }}</small></a></li>
                        <li><hr class="dropdown-divider"/></li>
                        <li><a class="dropdown-item" href="/session/signout">Sign Out</a></li>
                    </ul>
                </li>
                {%  else %}
                <li class="nav-item">
                    <a class="nav-link text-decoration-none text-black-50 small" href="/login">
                        <i class="fas fa-user"></i>
                        Sign in
                    </a>
                </li>
               {% endif %}
            </ul>
        </div>
    </nav>

    <!-- main-navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div class="container">
            <a class="navbar-brand d-block d-lg-none" href="/">
                <img src="/assets/images/brand/navbar.png" width="120" class="brand align-top" alt="{{ site_name }}"/>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav pull-sm-left">
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/services"> Services</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-logo mx-auto">
                    <li class="nav-item">
                        <a class="navbar-brand d-none d-lg-block" href="/">
                            <img src="/assets/images/brand/navbar.png" width="120" class="brand align-top" alt="{{ site_name }}"/>
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav pull-sm-right">
                    <li class="nav-item">
                        <a class="nav-link" href="/news">News &amp; Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% if page.tier == 1 %}
        <div class="hero-feature w-100" style="background-image:url('{{  image  }}');">
            <aside class="info-box bg-primary shadow p-4 d-none d-lg-block editable">
                <partial name="News">
                    <arg name="limit" type="int">1</arg>
                    <arg name="format">
                        <span class="text-white text-decoration-none fs-4">
                            {{ story.title }}
                        </span>
                    </arg>
                </partial>
            </aside>
        </div>
    {% elseif page.tier == 2 %}
        <div class="hero-feature w-100 bg-dark">
            <div class="container-fluid pt-5 pb-5" style="background-size: cover; background-image:url('{{  page.image  }}');">
                <div class="container">
                    <div class="row">
                        <div class="narrow-col mt-5 mt-md-0 order-md-1 col-md-4 col-lg-3 bg-primary p-0">
                            <div class="bg-dark bg-opacity-25 pt-3 pb-3">
                                <h1 class="display-6 side-nav-title text-center">
                                    <a class="text-white fw-bold" href="#">{{ page.title }}</a>
                                </h1>
                            </div>
                            <div class="pt-0">
                                <ul class="nav flex-column">
                                    {% for item in menu %}
                                    <li class="nav-item">
                                        <a class="nav-link text-center border-bottom text-white" href="{{ item.url }}">{{ item.title|e }}</a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {{ include('partial/breadcrumbs.html.twig', breadcrumbs) }}
    {% endif %}
</header>
