
<!-- widget/dice-roll -->
<p>Make consecutive roll using a dice notation:</p>

<form method="post" class="row g-3">
  <div class="col-auto">
    <label for="dice-notation" class="visually-hidden">Dice Notation</label>
     <input id="dice-notation" name="dice-notation" class="form-control" type="text" placeholder="1d4" value="{{ notation | e}}"/>
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Roll</button>
  </div>
    <input type="hidden" name="luck" value="{{ luck | e }}"/>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Outcome</th>
            <th>Luck</th>
        </tr>
    </thead>
    <tbody>
        {% for key, turn in turns %}
        <tr>
            <th>{{ key }}</th>
            <td>{{ turn.roll | e }}</td>
            <td>{{ turn.luck | e }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>