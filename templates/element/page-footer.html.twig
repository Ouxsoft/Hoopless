<footer class="bg-dark border border-5 border-start-0 border-right-0 border-end-0 border-bottom-0 border-secondary">
    <div class="container pt-5 pb-3">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-3">
               <img src="/assets/images/brand/footer.png" width="240" class="brand align-top m-auto" alt="{{ site_name }}"/>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <nav class="nav flex-column ">
                </nav>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                {% for link in menu %}
                    <li class="nav-item">
                        <a href="{{ link.url }}" class="nav-item nav-link text-white-50">{{ link.title|e }}</a>
                    </li>
                {% endfor %}
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 text-right">
                <nav class="nav flex-column ">

                </nav>
            </div>
        </div>
        <div class="col-12 text-center">
            <hr class="mt-5 mb-3"/>
            <span class="text-white-50">
            &copy; {{ year }} {{ site_name }}. All Rights Reserved.
            </span>
        </div>
    </div>
    <div class="clearfix"></div>
</footer>